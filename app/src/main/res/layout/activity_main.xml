<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="top|right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:onClick="clickAc"
                android:text="AC"
                android:textColor="@color/cyan" />

            <Button
                style="@style/customButton"
                android:text="DEL"
                android:onClick="clickDel"
                android:textColor="@color/cyan" />

            <Button
                style="@style/customButton"
                android:text="+/-"
                android:onClick="clickPlusMinus"
                android:textColor="@color/cyan" />

            <Button
                style="@style/customButton"
                android:text="/"
                android:onClick="clickDivision"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="7"
                android:onClick="click7"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="8"
                android:onClick="click8"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="9"
                android:onClick="click9"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="x"
                android:onClick="clickX"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="4"
                android:onClick="click4"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="5"
                android:onClick="click5"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="6"
                android:onClick="click6"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="-"
                android:onClick="clickMinus"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="1"
                android:onClick="click1"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="2"
                android:onClick="click2"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="3"
                android:onClick="click3"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="+"
                android:onClick="clickPlus"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="%"
                android:onClick="clickPercent"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="0"
                android:onClick="click0"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="."
                android:onClick="clickDot"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="="
                android:onClick="clickCalculate"
                android:textColor="@color/cyan" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>