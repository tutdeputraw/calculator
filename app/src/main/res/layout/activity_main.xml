<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:gravity="top|right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:onClick="clearOnClick"
                android:text="AC"
                android:textColor="@color/cyan" />

            <Button
                style="@style/customButton"
                android:text="DEL"
                android:onClick="deleteOnClick"
                android:textColor="@color/cyan" />

            <Button
                style="@style/customButton"
                android:text="()"
                android:onClick="bracketOnClick"
                android:textColor="@color/cyan" />

            <Button
                style="@style/customButton"
                android:text="/"
                android:onClick="divisionOnClick"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="7"
                android:onClick="sevenOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="8"
                android:onClick="eightOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="9"
                android:onClick="nineOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="x"
                android:onClick="timesOnClick"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="4"
                android:onClick="fourOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="5"
                android:onClick="fiveOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="6"
                android:onClick="sixOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="-"
                android:onClick="minusOnClick"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="1"
                android:onClick="oneOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="2"
                android:onClick="twoOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="3"
                android:onClick="threeOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="+"
                android:onClick="plusOnClick"
                android:textColor="@color/cyan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <Button
                style="@style/customButton"
                android:text="%"
                android:onClick="percentOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="0"
                android:onClick="zeroOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="."
                android:onClick="dotOnClick"
                android:textColor="@color/white" />

            <Button
                style="@style/customButton"
                android:text="="
                android:onClick="equalsOnClick"
                android:textColor="@color/cyan" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>